{
  "name": "@connexcs/interconnect-made-easy",
  "version": "0.1.1",
  "description": "JavaScript/TypeScript implementation of the Open Rate Card specification for telecommunications rate cards",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/browser/interconnect-made-easy.min.js",
  "types": "dist/types/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "interconnect-made-easy/schema",
    "interconnect-made-easy/*.md",
    "interconnect-made-easy/LICENSE",
    "interconnect-made-easy/example.json"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run fix:esm && npm run build:browser && npm run build:types && npm run copy:schema",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:browser": "esbuild src/index.ts --bundle --minify --sourcemap --outfile=dist/browser/interconnect-made-easy.min.js --format=iife --global-name=InterconnectMadeEasy --platform=browser --external:fs --external:crypto",
    "build:types": "tsc -p tsconfig.types.json",
    "copy:schema": "mkdir -p dist/interconnect-made-easy/schema && cp interconnect-made-easy/schema/*.json dist/interconnect-made-easy/schema/",
    "fix:esm": "node scripts/fix-esm-imports.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "voip",
    "telecommunications",
    "rate-card",
    "sip",
    "wholesale",
    "interconnect",
    "open-rate-card"
  ],
  "author": "ConnexCS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/connexcs/interconnect-made-easy-js.git"
  },
  "homepage": "https://github.com/connexcs/interconnect-made-easy-js#readme",
  "bugs": {
    "url": "https://github.com/connexcs/interconnect-made-easy-js/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "esbuild": "^0.20.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "canonicalize": "^2.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
